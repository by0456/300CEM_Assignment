<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editPlanActivity"
    tools:context=".EditPlanActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/etName_edit"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="72dp"
            android:hint="@string/etName_edit_hint" />

        <ImageButton
            android:id="@+id/ibPlaceVoice_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic_black_24dp" />

        <TextView
            android:id="@+id/tvAddress_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"
            android:hint="@string/tvAddress_edit_hint" />

        <TextView
            android:id="@+id/tvLatitude_edit"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="220dp"
            android:hint="@string/tvLatitude_edit_hint" />

        <TextView
            android:id="@+id/tvLongitude_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="3dp"
            android:hint="@string/tvLongitude_edit_hint" />

        <EditText
            android:id="@+id/etDescription_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="133dp"
            android:hint="@string/etDescription_edit_hint" />

        <TextView
            android:id="@+id/tvPlaceDate_edit"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="274dp"
            android:hint="@string/tvPlaceDate_edit_hint" />

        <TextView
            android:id="@+id/tvPlaceTime_edit"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="533dp"
            android:layout_marginEnd="274dp"
            android:hint="@string/tvPlaceTime_edit_hint" />

        <DatePicker
            android:id="@+id/dpPlaceDate_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="218dp"
            android:layout_marginEnd="17dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TimePicker
            android:id="@+id/tpPlaceTime_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="17dp"
            android:timePickerMode="spinner" />


    </RelativeLayout>


</LinearLayout>